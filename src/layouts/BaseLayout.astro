---
const {
  title = "KindScript",
  description = "Scripts, resources, and support for doctor visits, insurance, meds, and more.",
  keywords = "healthcare scripts, symptom summary, insurance appeal, medication refill, patient advocacy, KindScript",
  author = "KindScript",
  date,
  lastUpdated
} = Astro.props;

import "../styles/global.css";

// Format date for display
function formatDate(d) {
  if (!d) return "";
  return new Date(d).toLocaleDateString("en-US", {
    year: "numeric",
    month: "short",
    day: "numeric",
  });
}
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="keywords" content={keywords} />
    <meta name="author" content={author} />
    {date && <meta name="date" content={date} />}
    {lastUpdated && <meta name="last-modified" content={lastUpdated} />}
    <link rel="icon" href="/favicon.ico" sizes="any" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="apple-touch-icon" href="/favicon-180x180.png" />
    <link rel="manifest" href="/site.webmanifest" />
  </head>

  <body>
    <header class="header">
      <div class="center">
        <img src="/banner.png" alt="KindScript banner" class="logo-banner" />
        <p class="tagline">
          Helping you get through the hard parts of healthcare â€” one script at a time.
        </p>
      </div>
      <nav class="navbar">
        <div class="nav-links">
          <a 
            href="/"
            class={Astro.url.pathname === "/" ? "active" : ""}
            aria-current={Astro.url.pathname === "/" ? "page" : undefined}
          >
            Home
          </a>
          <a 
            href="/tools"
            class={Astro.url.pathname === "/tools" ? "active" : ""}
            aria-current={Astro.url.pathname === "/tools" ? "page" : undefined}
          >
            Tools
          </a>
          <a
            href="/about"
            class={Astro.url.pathname === "/about" ? "active" : ""}
            aria-current={Astro.url.pathname === "/about" ? "page" : undefined}
          >
            About
          </a>
        </div>
      </nav>
    </header>

    <main>
      <slot />
      {date && (
        <p style="font-size:0.9rem; color:#666; text-align:center; margin-top:1rem;">
          ðŸ“… <strong>Published:</strong> {formatDate(date)}
          {lastUpdated && ` â€¢ `}
          {lastUpdated && <><strong>Last updated:</strong> {formatDate(lastUpdated)}</>}
        </p>
      )}
    </main>
  </body>
</html>

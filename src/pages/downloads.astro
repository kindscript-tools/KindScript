---
import BaseLayout from "../layouts/BaseLayout.astro";

const title = "All Downloads & Templates – KindScript";
const description = "Browse all printable PDFs, Notion templates, and CSV files to help you prep, track, and share what matters.";
const keywords = "KindScript downloads, templates, downloadable, printable, PDFs, Notion, CSV, tools, patient tools, healthcare scripts, symptom summary, medication list, refill request, insurance appeal, work accommodation";
const author = "KindScript";

// Set these to your real dates
const date = "2025-08-01";
const lastUpdated = "2025-08-10";

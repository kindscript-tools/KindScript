---
const {
  title = "KindScript",
  description = "Scripts, resources, and support for doctor visits, insurance, meds, and more.",
  keywords = "healthcare scripts, advocacy, caregiver support, symptom summary, insurance appeal, medication refill, pain journal, fatigue journal, printables, quick messages, patient advocacy, KindScript",
  author = "KindScript",
  date,
  lastUpdated
} = Astro.props;

import "../styles/global.css";

// Format date for display
function formatDate(d) {
  if (!d) return "";
  return new Date(d).toLocaleDateString("en-US", {
    year: "numeric",
    month: "short",
    day: "numeric",
  });
}
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="keywords" content={keywords} />
    <meta name="author" content={author} />
    {date && <meta name="date" content={date} />}
    {lastUpdated && <meta name="last-modified" content={lastUpdated} />}
    <link rel="icon" href="/favicon.ico" sizes="any" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="apple-touch-icon" href="/favicon-180x180.png" />
    <link rel="manifest" href="/site.webmanifest" />
  </head>

  <body>
<header class="header">
  <div class="header-inner">
    <div class="center">
      <img src="/banner.png" alt="KindScript banner" class="logo-banner" />
      <p class="tagline">
        Helping you get through the hard parts of healthcare — one script at a time.
      </p>
    </div>

    <nav class="navbar">
      <div class="nav-links">
        <a href="/"
           class={Astro.url.pathname === "/" ? "active" : ""}
           aria-current={Astro.url.pathname === "/" ? "page" : undefined}>
          🏠 Home
        </a>

        <a href="/about"
           class={Astro.url.pathname === "/about" ? "active" : ""}
           aria-current={Astro.url.pathname === "/about" ? "page" : undefined}>
          ℹ️ About
        </a>

        <a href="/blog"
           class={Astro.url.pathname === "/blog" ? "active" : ""}
           aria-current={Astro.url.pathname === "/blog" ? "page" : undefined}>
          📝 Blog
        </a>

        <a href="/how-to-use"
            class={Astro.url.pathname === "/how-to-use" ? "active" : ""}
            aria-current={Astro.url.pathname === "/how-to-use" ? "page" : undefined}>
          🧭 How To Use
        </a>

        <!-- Tools dropdown -->
        <div class="dropdown">
          <button class={`dropbtn ${Astro.url.pathname.startsWith('/tools') || Astro.url.pathname.startsWith('/messages') ? 'active' : ''}`}>
            🧰 Tools ▾
          </button>
          <div class="dropdown-content">
            <a href="/tools">🧰 All Scripts</a>
            <a href="/scripts/messages">💬 Quick Messages</a>
          </div>
        </div>

        <!-- Downloads dropdown -->
        <div class="dropdown">
          <button class={`dropbtn ${Astro.url.pathname.startsWith('/downloads') ? 'active' : ''}`}>
            📥 Downloads ▾
          </button>
          <div class="dropdown-content">
            <a href="/downloads">📥 All Downloads</a>
            <a href="/downloads/pdfs">📄 PDFs</a>
            <a href="/downloads/templates">🗂️ Templates</a>
            <a href="/downloads/csvs">📊 CSVs</a>
            <a href="/downloads/notion">🗒️ Notion</a>
          </div>
        </div>

        <!-- Resources dropdown -->
        <div class="dropdown">
          <button class={`dropbtn ${Astro.url.pathname.startsWith('/resources') || Astro.url.pathname.startsWith('/blog') ? 'active' : ''}`}>
            📚 Resources ▾
          </button>
          <div class="dropdown-content">
            <a href="/resources">🔗 External Links</a>
          </div>
        </div>
      </div>
    </nav>
  </div>
</header>

    <main>
      <slot />
      {date && (
        <p style="font-size:0.9rem; color:#666; text-align:center; margin-top:1rem;">
          📅 <strong>Published:</strong> {formatDate(date)}
          {lastUpdated && ` • `}
          {lastUpdated && <><strong>Last updated:</strong> {formatDate(lastUpdated)}</>}
        </p>
      )}
    </main>
  </body>
</html>

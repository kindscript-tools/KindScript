---
import BaseLayout from "../layouts/BaseLayoutV2.astro";

const title = "Suggest a Tool ‚Äì KindScript";
const description = "Have an idea for a new script or resource? Let us know what would help you most when navigating doctor visits, insurance, medications, or more.";
const keywords = "Kindscript tool, suggest a tool, request a feature, patient support ideas, KindScript feedback, healthcare script request, user suggestions, medical form ideas";
const author = "KindScript";
const date = "2025-08-01";
const lastUpdated = "2025-08-18";
---

<BaseLayout
  title={title}
  description={description}
  keywords={keywords}
  author={author}
  date={date}
  lastUpdated={lastUpdated}
>
  <h1>üí° Suggest a New Script or Tool</h1>
  <p class="tagline">
    No name or email required. Nothing is saved beyond your submission.
  </p>

  <iframe
    data-tally-src="https://tally.so/embed/3yaZ28?alignLeft=1&transparentBackground=1&hideTitle=1&hideDescription=1"
    loading="lazy"
    width="100%"
    height="700"
    frameborder="0"
    marginheight="0"
    marginwidth="0"
    title="KindScript Suggest Form"
  ></iframe>

  <script>
    var d = document,
      w = "https://tally.so/widgets/embed.js",
      v = function () {
        if (typeof Tally !== "undefined") {
          Tally.loadEmbeds();
        } else {
          d.querySelectorAll("iframe[data-tally-src]:not([src])").forEach(function (e) {
            e.src = e.dataset.tallySrc;
          });
        }
      };

    if (typeof Tally === "undefined") {
      var s = d.createElement("script");
      s.src = w;
      s.onload = v;
      s.onerror = v;
      d.body.appendChild(s);
    } else {
      v();
    }
  </script>
<hr class="tool-divider">

    <p style="font-size: 0.875rem; text-align: center; margin-top: 2rem;">
  üìå Want to get the most out of this tool? Visit <a href="/how-to-use">How to Use KindScript</a>.
</p>
  </div>

  <div style="margin-top: 2rem;">
    <a href="/tools">‚Üê Back to all tools</a>
  </div>
</BaseLayout>
